/var/log/ufw.log
{
    su root adm
    create 644 root adm
    daily
    dateext
    dateformat .%Y-%m-%d
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    sharedscripts
    postrotate
      invoke-rc.d rsyslog rotate >/dev/null 2>&1 || true
    endscript
}
